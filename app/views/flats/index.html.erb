<!-- Display flats -->
<div class="flats-cards-container">
  <div class="card-container">
    <% @flats.each do |flat|  %>
      <div class="card">
      <% if flat.photo.attached? %>
        <%= cl_image_tag flat.photo.key, class: "card-img-top" %>
        <%else%>
        No photo
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to flat.name, flat_path(flat.id) %></h5>
        <p class="card-text"><%= flat.location %></p>
      </div>
  </div>
  <% end  %>
</div>
