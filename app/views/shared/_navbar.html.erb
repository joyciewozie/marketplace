
<div class="top-banner">
  <h5> Show total prices upfront <a href="#"> Learn more </a> </h5>
</div>
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon border-top border-bottom">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>

    <div class="dropdown">
      <button class="btn profile-btn bg-light border rounded-pill" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fa-solid fa-bars"></i>
        <i class="fa-solid fa-user avatar"></i>
      </button>
      <ul class="dropdown-menu dropdown-menu-end mt-2 shadow p-2 mb-5 bg-body rounded" aria-labelledby="dropdownMenuButton1">
        <% if user_signed_in? %>
          <li>
            <%= link_to "Airbnb your home", new_flat_path, class: "dropdown-item" %>
          </li>

          <li><hr class="dropdown-divider"></li>

          <li>
            <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %>
          </li>
        <% else %>
          <li>
          <%= link_to "Sign Up", new_user_registration_path, class: "dropdown-item" %>
          </li>

          <li><hr class="dropdown-divider"></li>

          <li>
          <%= link_to "Log In", new_user_session_path, class: "dropdown-item" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
